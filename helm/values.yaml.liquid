# this will be applied as a default values file post liquid templating.  
# It expects a `dns_zone` metadata field on the cluster

ingress:
  enabled: true
  className: nginx
  annotations: 
    cert-manager.io/cluster-issuer: letsencrypt-prod
  hosts:
    - host: cd-demo.{{ cluster.metadata.dns_zone }}
      paths:
        - path: /
          pathType: Prefix
          backend:
            service:
              name: cd-demo
              port:
                number: 80
  tls:
  - secretName: cd-demo-tls
    hosts:
      - cd-demo.{{ cluster.metadata.dns_zone }}